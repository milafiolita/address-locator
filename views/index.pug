doctype html
html(lang='en')
  head
    title
    link(href='https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css', rel='stylesheet')
    script(type='text/javascript', src='http://maps.google.com/maps/api/js?sensor=false')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css')
  body
    .container.mx-auto
      .flex.justify-center
        form.shadow-md.p-4.m-3.w-full(action='/', method='POST')
          .bg-grey-light.rounded.p-2.mb-2
            h2.text-black.text-justify Address Locator
          .mb-6
            label.block.text-black.text-sm.font-bold.mb-2(for='address')  Address 
            input#address.shadow.appearance-none.border.rounded.py-2.px-3.text-grey-darker(name='address', type='text', placeholder='Input Address')
          .flex.items-center.justify-between.mb-6
            input.bg-blue.text-white.font-bold.py-2.px-4.rounded(type='submit', value='Submit', class='hover:bg-blue-dark')
          .mb-6
            //label.block.text-black.text-sm.font-bold.mb-3.mt-6(for='answer') Location
            p #{hasil}
            textarea#location.shadow.appearance-none.border.rounded.h-48.py-6.px-3(type='text', disabled='', class='w-1/2', row='5')=locationinfo